{
  "name": "among-us-bot",
  "private": true,
  "description": "The \"do-it-all\" Discord bot for the Humongous server.",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "nodemon",
    "test": "jest --coverage --forceExit && standard",
    "build": "tsc",
    "format": "prettier --write **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JasonEtco/among-us-bot.git"
  },
  "author": "Jason Etcovitch <jasonetco@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JasonEtco/among-us-bot/issues"
  },
  "homepage": "https://github.com/JasonEtco/among-us-bot#readme",
  "dependencies": {
    "discord.js": "^12.4.1",
    "dotenv": "^8.2.0",
    "owoify-js": "^1.0.7",
    "signale": "^1.4.0",
    "unique-random": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/signale": "^1.4.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "standard": "^15.0.1",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.(ts|js)"
    ]
  }
}
